<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
   		<item name="android:paddingLeft">5dip</item>
    </style>
    <style name="textview_style">
        <item name="android:background">@drawable/textview_selector</item>
   		<item name="android:paddingLeft">5dip</item>
    </style>
    <style name="button_style">
        <item name="android:background">@drawable/button_selector</item>
    </style>
    <style name="edittext_style">
        <item name="android:background">@drawable/edittext_selector</item>
   		<item name="android:paddingLeft">5dip</item>
    </style>
    <style name="checkbox_style">
        <item name="android:background">@drawable/checkbox_selector</item>
   		<item name="android:paddingLeft">5dip</item>
    </style>
    <style name="login_button_style">
        <item name="android:background">@drawable/login_button_selector</item>
    </style>
    <style name="logout_button_style">
        <item name="android:background">@drawable/logout_button_selector</item>
    </style>
    <style name="normal_style">
        <item name="android:background">@drawable/selector</item>
    </style>
    <style name="small_button_style">
        <item name="android:background">@drawable/small_button_selector</item>
    </style>

</resources>
